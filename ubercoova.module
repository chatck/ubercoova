  $table_acct = variable_get('ubercoova_table_accounting', '');
  if (empty($table_acct)) {
    return t('No active sessions.');
  }

  $header = array(
    array('data' => t('Username'),          'field' => 'a.username'),
    array('data' => t('Start'),             'field' => 'acctstarttime', 'sort' => 'desc'),
    array('data' => t('IP Address'),        'field' => 'a.acctoutputoctets'),
    array('data' => t('Uploaded'),          'field' => 'a.acctoutputoctets'),
    array('data' => t('Downloaded'),        'field' => 'a.acctinputoctets'),
  );
  $rows = array();

  $query = 'SELECT a.username, UNIX_TIMESTAMP(a.acctstarttime) AS acctstarttime, a.acctoutputoctets, a.acctinputoctets, a.framedipaddress FROM ' . $table_acct . ' AS a WHERE a.acctstoptime IS NULL';
  $query = $query . tablesort_sql($header);

  db_set_active('radius');
  $result = pager_query($query, 15, 0);
  while ($row = db_fetch_array($result)) {
    $rows[] = array(
      'username' => $row['username'],
      'start' => format_interval( (time() - $row['acctstarttime']), 1) . ' ago',
      'address' => $row['framedipaddress'],
      'uploaded' => ubercoova_format_size($row['acctoutputoctets']),
      'downloaded' => ubercoova_format_size($row['acctinputoctets']),
    );
  }
  db_set_active();

  // This is less than ideal, but we cannot assume a hotspot users exists in Drupal.
  // Loop through all found users and replace their names with a link if appropriate.
  foreach($rows as $key => $row) {
    $account = user_load(array('name' => $row['username']));
    if ($account->uid > 0) {
      $rows[$key]['username'] = theme('username', $account);
    }
  }

  if (empty($rows)) {
    return t('There are no active sessions.');
  }

  $output  = theme('table', $header, $rows);
  $output .= theme('pager', array(), 15);
  return $output;
}

/**
 * Function to display recent sessions on the /user/%/sessions page.
 *
 * @param $account
 *   A valid user account.
 * @return
 *   A translated themed paged table.
 */
function ubercoova_user_sessions($account) {
  drupal_set_title(t('Hotspot Sessions'));

  $table_acct = variable_get('ubercoova_table_accounting', '');
  if (empty($table_acct)) {
    return t('No recent sessions.');
  }

  $header = array(
    array('data' => t('Start'),             'field' => 'acctstarttime', 'sort' => 'desc'),
    array('data' => t('Finish'),            'field' => 'acctstoptime'),
    array('data' => t('IP Address'),        'field' => 'framedipaddress'),
    array('data' => t('Uploaded'),          'field' => 'acctoutputoctets'),
    array('data' => t('Downloaded'),        'field' => 'acctinputoctets'),
    array('data' => t('Termination Cause'), 'field' => 'acctterminatecause'),
  );

  $query = "SELECT acctstarttime, acctstoptime, framedipaddress, acctoutputoctets, acctinputoctets, acctterminatecause FROM " . $table_acct . " WHERE username = '" .  check_plain($account->name) ."'";
  $query = $query . tablesort_sql($header);

  db_set_active('radius');
  $result = pager_query($query, 15, 0);
  while ($row = db_fetch_array($result)) {
    $rows[] = array(
      'start' => $row['acctstarttime'],
      'finish' => $row['acctstoptime'],
      'address' => $row['framedipaddress'],
      'uploaded' => ubercoova_format_size($row['acctoutputoctets']),
      'downloaded' => ubercoova_format_size($row['acctinputoctets']),
      'terminated' => $row['acctterminatecause'],
    );
  }
  db_set_active();

  $output  = theme('table', $header, $rows);
  $output .= theme('pager', array(), 15);
  return $output;
}

/**
 * Taken from Drupal 7.x, to handle units larger than MB.
 *
 * Generate a string representation for the given byte count.
 *
 * @param $size
 *   A size in bytes.
 * @param $langcode
 *   Optional language code to translate to a language other than what is used
 *   to display the page.
 * @return
 *   A translated string representation of the size.
 */
function ubercoova_format_size($size, $langcode = NULL) {
  if ($size < UBERCOOVA_KILOBYTE) {
    return format_plural($size, '1 byte', '@count bytes', array(), $langcode);
  }
  else {
    $size = $size / UBERCOOVA_KILOBYTE; // Convert bytes to kilobytes.
    $units = array(
      t('@size KB', array(), $langcode),
      t('@size MB', array(), $langcode),
      t('@size GB', array(), $langcode),
      t('@size TB', array(), $langcode),
      t('@size PB', array(), $langcode),
      t('@size EB', array(), $langcode),
      t('@size ZB', array(), $langcode),
      t('@size YB', array(), $langcode),
    );
    foreach ($units as $unit) {
      if (round($size, 2) >= UBERCOOVA_KILOBYTE) {
        $size = $size / UBERCOOVA_KILOBYTE;
      }
      else {
        break;
      }
    }
    return str_replace('@size', round($size, 2), $unit);
  }
}
